<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.biometric.safingerprintscan">

    <uses-permission
        android:name="android.permission.QUERY_ALL_PACKAGES"
        tools:ignore="QueryAllPackagesPermission" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name=".Offline.offline"
        android:allowBackup="true"
        android:icon="@mipmap/ic_login_round"
        android:label="@string/app_name"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@mipmap/ic_login_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.SAFingerprintScan">
        <activity
            android:name=".Screens.View_Form"
            android:exported="false" />
        <activity
            android:name=".Screens.ScanScreen10"
            android:exported="false" />
        <activity
            android:name=".Screens.ScanScreen9"
            android:exported="false" />
        <activity
            android:name=".Screens.ScanScreen8"
            android:exported="false" />
        <activity
            android:name=".Screens.ScanScreen7"
            android:exported="false" />
        <activity
            android:name=".Screens.ScanScreen6"
            android:exported="false" />
        <activity
            android:name=".Screens.ScanScreen5"
            android:exported="false" />
        <activity
            android:name=".Screens.ScanScreen4"
            android:exported="false" />
        <activity
            android:name=".Screens.ScanScreen3"
            android:exported="false" />
        <activity
            android:name=".Screens.ScanScreen2"
            android:exported="false" />
        <activity
            android:name=".Screens.ScanScreen1"
            android:exported="false" />
        <activity
            android:name=".Screens.User_EditScreen"
            android:exported="false" />
        <activity
            android:name=".Screens.Chat_Screen"
            android:exported="false" />
        <activity
            android:name=".Screens.Add_ActivityScreen"
            android:exported="false" />
        <activity
            android:name=".Screens.Admin_MainScreen"
            android:exported="false"
            android:label=" " />
        <activity
            android:name=".Screens.AcquisitionForm_Screen"
            android:exported="false" />
        <activity
            android:name=".Screens.User_MainScreen"
            android:exported="false"
            android:label=" " />
        <activity
            android:name=".Screens.Login_Screen"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.provider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_path" />
        </provider>

        <service
            android:name=".Notifications.FirebaseNotificationService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
    </application>

</manifest>